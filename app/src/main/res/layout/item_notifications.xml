        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#1A0DD12C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_notification"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/profile_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.045" />

            <TextView
                android:id="@+id/user_name_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/actor"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/user_image_notification"
                app:layout_constraintTop_toTopOf="@+id/user_image_notification"
                tools:text="Nweke Emmanuel" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:fontFamily="@font/allerta"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/user_image_home"
                app:layout_constraintStart_toStartOf="@+id/user_name_notification"
                app:layout_constraintTop_toBottomOf="@+id/user_name_notification"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_decline"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:clickable="true"
                android:fontFamily="@font/allerta"
                android:text="Decline"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn_accept"
                app:layout_constraintEnd_toEndOf="@+id/user_name_notification"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/btn_accept" />
        </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.cardview.widget.CardView>-->
</RelativeLayout>